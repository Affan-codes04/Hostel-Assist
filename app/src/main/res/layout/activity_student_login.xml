<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"
    tools:context=".StudentLogin">
    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="280dp"
        android:onClick="login"
        android:backgroundTint="@color/colorPrimary"/>-->

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/logofinal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/redirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account? Click here"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutRegisterNumber"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Register Number"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        app:startIconDrawable="@drawable/rounded_account_circle_24"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        app:endIconMode="clear_text"
        app:hintTextColor="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registerNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="9"
            android:background="@color/white"
            android:textColorHint="#757575" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutName"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@+id/textInputLayoutRegisterNumber"
        android:layout_marginLeft="30dp"
        app:startIconDrawable="@drawable/rounded_account_circle_24"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:endIconMode="clear_text"
        app:hintTextColor="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@color/white"
            android:maxLength="30"
            android:textColorHint="#757575" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_below="@+id/textInputLayoutName"
            android:layout_marginLeft="30dp"
            app:startIconDrawable="@drawable/baseline_contact_mail_24"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:endIconMode="clear_text"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@color/white"
                android:maxLength="50"
                android:textColorHint="#757575" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_below="@+id/textInputLayoutEmail"
            android:layout_marginLeft="30dp"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="password_toggle"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@color/white"
                android:maxLength="20"
                android:textColorHint="#757575" />
        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="710dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#E64A19"
        android:onClick="createAccount"/>

</RelativeLayout>