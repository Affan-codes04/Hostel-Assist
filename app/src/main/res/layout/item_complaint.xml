<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Image Placeholder -->
        <ImageView
            android:id="@+id/complaintImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/woman"
            android:scaleType="centerCrop"
            android:contentDescription="Complaint Image" />

        <!-- Vertical Layout for Text Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name or Title -->
            <TextView
                android:id="@+id/textViewRegisterNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <!-- Additional Detail (e.g., Room Number) -->
            <TextView
                android:id="@+id/textViewRoomNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Number: 101"
                android:textSize="14sp"
                android:textColor="#757575"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/textViewComplaintDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Description"
                android:textSize="14sp"
                android:textColor="#757575"
                android:paddingTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
